<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:id="@+id/content_view">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/splash_first_line"
        android:id="@+id/spalsh_first_line"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/ripple_material_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/splash_second_line"
        android:id="@+id/spalsh_second_line"
        android:layout_below="@id/spalsh_first_line"
        android:layout_centerHorizontal="true"
        android:textColor="@color/ripple_material_dark"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spalsh_logo"
        android:src="@drawable/bottle"
        android:layout_below="@id/spalsh_second_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:scaleType="center"
        android:alpha="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bg_rain"
        android:src="@drawable/rain"
        android:layout_below="@id/spalsh_second_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:alpha="0.2"
        android:scaleY="2"
        android:scaleX="2"
        android:tint="#CECECE"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="version 0.0"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/ripple_material_dark"
        android:id="@+id/splash_txt_version" />


</RelativeLayout>